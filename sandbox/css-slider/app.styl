@import '../../assets/stylus/core/_import'
@import '../../assets/stylus/component/_article'

html, body
  height 100%
  overflow hidden
.container
  perspective 100px
  height 100vh
  position relative
  background url('/assets/images/sample/background.jpeg') no-repeat
  background-size cover
  position relative

Num = 3

.slider
  opacity 0.8
  background white
  width 600px
  height 200px
  overflow hidden
  position absolute
  left 50%
  top 50%
  transform translate(-50%,-50%)
  > input
    position absolute
    width 0
    height 0
    top 0
    left 0
    visibility hidden
    opacity 0
  > label
    position absolute
    top 50%
    transform translate(-100%,-50%)
    display block
    width 50px
    height 50px
    line-height 50px
    text-align center
    z-index 1000
    cursor pointer
    transform translate(0,-50%)
    display none
    font normal normal normal 14px/1 FontAwesome
    text-rendering auto
    antialiased()
    transition opacity 0.25s ease-out
    &:hover
      opacity 0.5

  &__content
    height 100%
    width 100% * Num
    min-width 100%
    display block
    white-space nowrap
    transition transform 0.5s ease-out
    &__item
      display inline-block
      width 600px
      height 100%
      text-align center
      line-height 200px
      z-index 10
      vertical-align top

  for index in 0..Num
    #slide0{ index + 1 }:checked ~ .slider__content
      transform translate3d(-100% / Num * index,0,0)

    #slide0{ index + 1 }:checked ~ label[for={'slide0' + (index)}]
      left 0
      display block
      &:before
        content "\f104"
        font-size 50px

    #slide0{ index + 1 }:checked ~ label[for={'slide0' + (index + 2)}]
      right 0
      display block
      &:before
        content "\f105"
        font-size 50px
