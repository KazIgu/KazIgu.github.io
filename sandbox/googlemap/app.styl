@import '../../assets/stylus/core/_import'

green = #00cc8f
greenHover = #005500

html, body
  height 100%
  overflow hidden
.container
  perspective 1000px
  height 100vh
  position relative
  clearfix()


.search
  position absolute
  text-align center
  width 100%
  height 100px
  line-height 100px

.content
  position relative
  height 100%
  .result
    width 350px
    height 100%
    padding-top 100px
    box-sizing border-box
    position absolute
    left 0
    top 0
    z-index 10
  .map
    width 100%
    height 100%
    padding-top 100px
    box-sizing border-box
    position absolute
    left 0
    top 0
    box-sizing border-box
    padding-left 350px


.bl-map
  width 100%
  height 100%
  position relative
  &__heatmapButton
    position absolute
    top 10px
    left 120px
    z-index 99999
    border none
    height 35px
    line-height 35px
    padding 0 10px
    font-size 1.2rem
    background white
    box-shadow 0 0 5px alpha(black, 0.5)
    &:before
      content attr(data-text)
    &.is-selected:before
      content attr(data-selected-text)
#map
  width 100%
  height 100%
  .bl-info
    position absolute
    display inline-block
    background green
    color white
    cursor default
    z-index 9999
    white-space nowrap
    transform translate(-50%, -50%)
    transition background-color 0.25s ease-out
    &:hover, &.is-hover
      background-color greenHover
      z-index 99999
    &__label
      display inline-block
      cursor pointer
    &__input
      position absolute
      opacity 0
      visibility hidden
    &__modal
      position absolute
      left 50%
      bottom 50%
      background white
      border 1px solid green
      color green
      opacity 0
      width auto
      white-space nowrap
      padding 20px
      z-index -1
      overflow hidden
      width 0
      height 0
      z-index 99999999
      transition opacity 0.25s ease-out,
                 width 0s ease-out,
                 height 0s ease-out
      &__image
        display table-cell
        width 100px
        height 100px
        overflow hidden
        position relative
        vertical-align middle
        img
          width 100px
      &__info
        display table-cell
        vertical-align middle
        padding-left 20px
      &__title
        font-size 2.2rem
      &__cost
        font-size 1.8rem
      &__close
        cursor pointer
        width 20px
        height 20px
        text-align center
        line-height 20px
        position absolute
        right 10px
        top 10px
        font-size 20px
        border 1px solid green
        border-radius 20px
    &__input:checked + .bl-info__modal, .is-open .bl-info__modal
      opacity 1
      z-index 10
      width auto
      height auto
  &.is-enlarged .bl-info
    &__label
      padding 10px 20px
    &__title
      font-size 1.4rem
    &__cost
      font-size 1.2rem
      > span
        font-size 1.8rem
  &.is-reduced .bl-info
    &__label
      padding 10px
    &__title
      display none
    &__cost
      font-size 1.0rem
      > span
        font-size 1.3rem


.bl-searchResultList
  border-top 1px solid #dadada
  height 100%
  overflow scroll
  &__item
    width 100%
    border-bottom 1px solid #dadada
    position relative

.bl-searchResult
  display table
  background white
  width 100%
  cursor pointer
  transition background-color 0.25s ease-out
  &__image
    display table-cell
    width 100px
    height 100px
    overflow hidden
    vertical-align middle
    font-size 0
    img
      width 100%
  &__info
    padding-left 10px
    display table-cell
    vertical-align middle
  &__name
    font-size 1.5rem
    color green
  &__mapButton
    position absolute
    right 10px
    top 10px
    display inline-block
    cursor pointer
    color green
  &:hover, &.is-hover
    background #dadada