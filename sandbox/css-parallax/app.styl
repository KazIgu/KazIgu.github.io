@import '../../assets/stylus/core/_import'
@import '../../assets/stylus/component/_article'

.container
  perspective 100px
  height 100vh
  overflow-x hidden
  overflow-y scroll

.base
  transform translateZ(0)
  height 1000px
  z-index -1
  position relative

.layer01
  transform translateZ(-100px)
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  &__item
    z-index 10
    display block
    width 100px
    height 100px
    border-radius 50%
    background white
    opacity 0.5
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    &:nth-child(1)
      margin-left -90%
      margin-top -90vh
    &:nth-child(2)
      margin-left -70%
      margin-top -50vh
    &:nth-child(3)
      margin-left 50%
      margin-top -70vh
    &:nth-child(4)
      margin-left -10%
      margin-top -80vh
    &:nth-child(5)
      margin-left 100%
      margin-top -60vh
.layer02
  transform translateZ(-50px)
  position absolute
  left 0
  top 20vh
  width 100%
  height 100vh
  &__item
    z-index 10
    display block
    width 100px
    height 100px
    border-radius 50%
    background white
    opacity 0.5
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    &:nth-child(1)
      margin-left -95% * 0.75
      margin-top -93vh * 0.75
    &:nth-child(2)
      margin-left -72% * 0.75
      margin-top -55vh * 0.75
    &:nth-child(3)
      margin-left 55% * 0.75
      margin-top -71vh * 0.75
    &:nth-child(4)
      margin-left -20% * 0.75
      margin-top -85vh * 0.75
    &:nth-child(5)
      margin-left 30% * 0.75
      margin-top -10vh * 0.75


.layer11
  transform translateZ(50px)
  position absolute
  left 0
  top 30vh
  width 100%
  height 100vh
  &__item
    z-index 10
    display block
    width 100px
    height 100px
    border-radius 50%
    background white
    opacity 0.5
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    &:nth-child(1)
      margin-left -95% * 0.25
      margin-top -93vh * 0.25
    &:nth-child(2)
      margin-left -72% * 0.25
      margin-top -55vh * 0.25
    &:nth-child(3)
      margin-left 55% * 0.25
      margin-top -71vh * 0.25
    &:nth-child(4)
      margin-left -20% * 0.25
      margin-top -85vh * 0.25
    &:nth-child(5)
      margin-left 30% * 0.25
      margin-top -10vh * 0.25
.layer12
  transform translateZ(75px)
  position absolute
  left 0
  top 100vh
  width 100%
  height 100vh
  &__item
    z-index 10
    display block
    width 100px
    height 100px
    border-radius 50%
    background yellow
    opacity 0.5
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%) scale(0.25)
    &:nth-child(1)
      margin-left -95% * 0.13
      margin-top -93vh * 0.13
    &:nth-child(2)
      margin-left -72% * 0.13
      margin-top 0 * 0.13
    &:nth-child(3)
      margin-left 55% * 0.13
      margin-top 100vh * 0.13
    &:nth-child(4)
      margin-left -40% * 0.13
      margin-top 205vh * 0.13
    &:nth-child(5)
      margin-left 50% * 0.13
      margin-top 300vh * 0.13

.keyvisual
  height 100vh
  position relative
  background url('/assets/images/sample/background.jpeg') no-repeat
  background-size cover
  &:before
    content ''
    display block
    width 100%
    height 100%
    background alpha(black, 0.5)
    position absolute
    left 0
    top 0
  &__title
    font-size 3rem
    color white
    text-align center
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.content01
  text-align center
  background green
  line-height 3
  color white
  padding 100px 0
.content02
  text-align center
  background blue
  line-height 3
  color white
  padding 100px 0
.content03
  text-align center
  background red
  line-height 3
  color white
  padding 100px 0