.bl-article
  margin 0 auto
  &__head
    background green
    color white
    font-family dosis_font_family
    position relative
    padding 10px 20px 10px
    &__title
      font-weight normal
      font-size 3.2rem
    &__date
      font-size 1.4rem
    &__category
      position absolute
      right 20px
      top 10px
      a
        color white
    &__tag
      a
        color white
        margin-right 10px
        &:before
          font-awesome()
          content "\f02c"
          margin-right 5px
  &__body
    margin 50px 0
    letter-spacing 0.05em
    font-size 1.5rem
    color black
    padding 0 20px
    h3
      margin 30px 0 10px
      font-size 2.8rem
      font-weight normal

