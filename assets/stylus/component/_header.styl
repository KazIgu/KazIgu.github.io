.bl-header
  overflow hidden
  background white
  width 100%
  height 55px
  line-height 55px
  box-sizing border-box
  position relative
  border-bottom 1px solid lightgrey
  &__navigation
    position absolute
    right 50px
    top 0
    line-height 55px
    a
      display inline-block
      margin-left 10px
      &.is-trick
        position relative
        color transparent
        &:before
          position absolute
          left 0
          top 0
          content attr(title)
          color blue
          transition transform 0.25s ease-out
        &:after
          position absolute
          left -1px
          top 0
          content attr(title)
          color blue
          opacity 0
          background white
          white-space nowrap
          clip rect(25px, 200px, 30px, 0)
          transition opacity 0.25s ease-out 0.3s
        &:hover
          &:before
            transform rotateY(360deg)
          &:after
            opacity 1
            animation headerNavigationTrick 0.25s ease-out 0.3s infinite normal
          &:active
            transform scale(1.1)

    @media sp
      display none
  &__title
    font-weight bold
    font-size 2.0rem
    text-indent 10px
    margin 0
    a
      color green
      &:hover
        color saturateHSV(green, 50)
  &__description
    display none
  &__social
    text-align center
    position absolute
    right 10px
    top 0
    &__github
      font-size 24px
      &:hover
        transform rotateX(180deg)

@keyframes headerNavigationTrick
  0%
    left -1px
    clip rect(20px, 200px, 25px, 0)
  100%
    left 1px
    clip rect(30px, 200px, 35px, 0)
